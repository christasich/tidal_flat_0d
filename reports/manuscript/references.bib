  file = {C\:\\Users\\chris\\Zotero\\storage\\UK6CDJMZ\\Marani et al_2010_The importance of being coupled.pdf;C\:\\Users\\chris\\Zotero\\storage\\9JPJLN8Z\\2009JF001600.html}
}

