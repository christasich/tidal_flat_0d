@article{payoProjectedChangesArea2016,
  title = {Projected Changes in Area of the {{Sundarban}} Mangrove Forest in {{Bangladesh}} Due to {{SLR}} by 2100},
  author = {Payo, Andres and Mukhopadhyay, Anirban and Hazra, Sugata and Ghosh, Tuhin and Ghosh, Subhajit and Brown, Sally and Nicholls, Robert J. and Bricheno, Lucy and Wolf, Judith and Kay, Susan and L{\'a}z{\'a}r, Attila N. and Haque, Anisul},
