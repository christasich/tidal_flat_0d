@article{haleObservationsScalingTidal2019,
  title = {Observations and Scaling of Tidal Mass Transport across the Lower {{Ganges}}\textendash{{Brahmaputra}} Delta Plain: Implications for Delta Management and Sustainability},
  shorttitle = {Observations and Scaling of Tidal Mass Transport across the Lower {{Ganges}}\textendash{{Brahmaputra}} Delta Plain},
  author = {Hale, Richard and Bain, Rachel and Goodbred Jr., Steven and Best, Jim},
  year = {2019},
  month = mar,
